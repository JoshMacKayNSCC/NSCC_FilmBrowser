<UserControl x:Class="FilmBrowser.HomeDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilmBrowser"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid Style="{StaticResource GridBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Border Style="{StaticResource ThinBorder}">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="TB_Category" Text="Results" Style="{StaticResource Home_QueryCategory}"/>
                <StackPanel x:Name="StackPanel_QueryResults" Orientation="Vertical">
                    
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
